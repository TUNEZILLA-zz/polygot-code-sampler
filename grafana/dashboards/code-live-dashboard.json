{
  "dashboard": {
    "id": null,
    "title": "Code Live - Performance Spectrum",
    "tags": ["code-live", "performance", "creative"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (Requests/sec)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(code_live_requests_total[1m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Error Rate (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(code_live_requests_total{status=~\"5..\"}[5m]) / rate(code_live_requests_total[5m]) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Render Latency Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(code_live_request_duration_seconds_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Backend Performance Spectrum",
        "type": "bargauge",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(code_live_request_duration_seconds_bucket{endpoint=\"/render\"}[5m])) by (backend)",
            "legendFormat": "{{backend}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 5,
        "title": "Fallback Rate (%)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(code_live_fallbacks_total[10m]) / rate(code_live_requests_total[10m]) * 100",
            "legendFormat": "Fallback Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 6,
        "title": "Glitch Activations",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(code_live_glitches_total[1m])",
            "legendFormat": "Glitch Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 7,
        "title": "Queue Depth",
        "type": "gauge",
        "targets": [
          {
            "expr": "code_live_queue_depth",
            "legendFormat": "Queue Depth"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        }
      },
      {
        "id": 8,
        "title": "Active Requests",
        "type": "gauge",
        "targets": [
          {
            "expr": "code_live_active_requests",
            "legendFormat": "Active Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 9,
        "title": "Batch Size Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "rate(code_live_batch_size_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 36
        }
      },
      {
        "id": 10,
        "title": "Performance Spectrum (Real-time)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(code_live_request_duration_seconds_bucket{endpoint=\"/render\"}[1m])) by (backend)",
            "legendFormat": "{{backend}} p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(code_live_request_duration_seconds_bucket{endpoint=\"/render\"}[1m])) by (backend)",
            "legendFormat": "{{backend}} p95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 44
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}
